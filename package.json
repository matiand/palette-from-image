{
    "name": "palette-from-image",
    "version": "0.1.0",
    "description": "A simple library to generate color palettes from images.",
    "keywords": [
        "palette",
        "color",
        "image",
        "photo",
        "picture",
        "canvas"
    ],
    "files": [
        "lib"
    ],
    "main": "lib/index.js",
    "module": "./lib/index.mjs",
    "types": "lib/index.d.ts",
    "exports": {
        ".": {
            "require": "./lib/index.js",
            "import": "./lib/index.mjs",
            "types": "./lib/index.d.ts"
        }
    },
    "repository": "github:matiand/palette-from-image",
    "license": "MIT",
    "scripts": {
        "build": "tsup src/index.ts --dts --minify --treeshake --format cjs,esm --outDir lib",
        "test": "vitest",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@types/quantize": "^1.0.0",
        "@types/skmeans": "^0.11.4",
        "jsdom": "^22.1.0",
        "tsup": "^6.7.0",
        "typescript": "^5.0.4",
        "vitest": "^0.31.1",
        "vitest-canvas-mock": "^0.2.2"
    },
    "dependencies": {
        "colord": "^2.9.3",
        "quantize": "^1.0.2",
        "skmeans": "^0.11.3"
    },
    "overrides": {
        "jest-canvas-mock": "2.5.0"
    },
    "engines": {
        "node": ">=16"
    }
}
